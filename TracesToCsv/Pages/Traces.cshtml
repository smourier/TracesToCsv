@page "{id}/{*url}"
@using TracesToCsv
@model TracesToCsv.Pages.TracesModel
@{
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Traces To Csv</title>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="//cdn.datatables.net/2.3.4/css/dataTables.dataTables.min.css" />
    <script src="//code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="//cdn.datatables.net/2.3.4/js/dataTables.min.js"></script>
    <style>
        body {
            margin: 20px;
            font-family: Consolas;
            font-size: 14px;
        }

    </style>
</head>
<body>

    @if (Model.Folder.IsRoot)
    {
        <p>Traces To CSV id @Model.Id.ToString("N"), API Key: @Model.Key</p>
        <p>To create a trace, PUT a JSON object to "http://server/traces/&lt;API Key&gt;" using this JSON schema:</p>
        <pre>
{
    "version": 1,     // always 1
    "level": "info",  // "error" or 1, "warning" or 2, "info" or 3, "verbose" or 4
    "category": "",   // whatever, nothing means the trace will be copied to the root
    "message": "...", // whatever
    "values": {       // a dictionary
        "some bool": true,
        "a value": 1234.5677,
        "dummy": "hello world"
    },
    "timestamp": "2025-09-19T11:13:53.6160989+00:00",
}</pre>
        <hr />
    }

    <div>
        <table id="traces" class="table table-striped display compact">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Length</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Folder.IsRoot)
                {
                    <tr>
                        <td><a href="/Traces/@Model.Folder.ParentFullName">[parent]</a></td>
                        <td>&nbsp;</td>
                        <td>&nbsp;</td>
                    </tr>
                }

                @foreach (var item in Model.Folder.Entries.Order())
                {
                    <tr>
                        @if (item is TraceFile file)
                        {
                            <td><a href="/Traces/@item.FullName">@item.Name</a></td>
                            <td>@file.Length</td>
                            <td nowrap>@file.LastWriteTimeUtc</td>
                        }
                        else
                        {
                            <td><a href="/Traces/@item.FullName">@item.Name</a></td>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                        }
                    </tr>
                }
            </tbody>
        </table>

        <script type="text/javascript">
            new DataTable('#traces');
        </script>
    </div>
</body>
</html>
